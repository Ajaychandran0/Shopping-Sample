<section>
    <div class="container mt-4">
        <div class="row">
            <div class="col-md-6">
                <h2 class="text-center">Edit User</h2>
                <form action="/admin/edit-user/{{user._id}}" method="post" enctype="multipart/form-data">
                     {{#if updateErr}}
                     <p class="error text-danger">user with this email already exists</p>
                     {{/if}}
                    <label for="">First Name</label>
                    <input type="text" name="fName" class="form-control" value="{{user.fName}}">

                    <label for="">Last Name</label>
                    <input type="text" name="lName" class="form-control" value="{{user.lName}}">

                    <label for="">Email</label>
                    <input type="email" name="Email" class="form-control" value="{{user.Email}}">
                    <input type="hidden" name="email" class="form-control" value="{{user.Email}}">
                    <input type="hidden" name="id" class="form-control" value="{{user._id}}">

                   

                    <button type="submit" class="btn btn-success mt-4"> submit</button>
                    

                    
                </form>
            </div>
        </div>
        
    </div>
</section>