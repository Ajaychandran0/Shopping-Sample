<div class="container m-5 p-5">
    <div class="row">
        <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
            <form action="/admin/login" method="post" role="form" enctype="application/x-www-form-urlencoded">

                
                <legend>Admin Login</legend>
                <br>

            {{#if loginErr}}  
            
            <p class="error text-danger">Invalid Username or Password</p>

            {{/if}}

                <div class="form-group">
                    <label for="email">Email Address</label>
                    <input type="text" class="form-control" name="Email" id="email" placeholder="Email Address">
                </div>

                <div class="form-group">
                    <label for="pw">Password</label>
                    <input type="password" class="form-control" name="Password" id="pw">
                </div>
               

                <button type="submit" class="btn btn-primary float-right">Login</button>
            </form>
        </div>
    </div>
</div>