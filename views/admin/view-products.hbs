<section>
    <div class="container">



        <div class="row mt-4">
            <a href="/admin/add-product" class="btn btn-success ml-auto">Add Product</a>
        </div>

        <div>
            <br>
            <input type='text' id='txt_searchall'  placeholder='search products'>&nbsp;
            <br>
        </div>

        <table class="table mt-5">
            <thead>
                <tr>
                    <th scope="col">No.</th>
                    <th scope="col">Title</th>
                    <th scope="col">Category</th>
                    <th scope="col">Price</th>
                    <th scope="col">Discription</th>
                    <th scope="col">Image</th>
                </tr>
            </thead>
            <tbody>
                {{#each products}}
                <tr>
                    <th scope="row">{{inc @index}}</th>
                    <td>{{this.Name}}</td>
                    <td>{{this.Category}}</td>
                    <td>{{this.Price}}</td>
                    <td>{{this.Discription}}</td>
                    <td><img style="width:5rem;height:5rem" src="/images/{{this._id}}.jpg" alt=""></td>
                    <td><a href="/admin/edit-product/{{this._id}}" class="btn btn-success">Edit</a></td>
                    <td><a href="/admin/delete-product/{{this._id}}" class="btn btn-danger">Delete</a></td>

                </tr>
                

                {{/each}}

                <tr class='notfound'>
                    <td colspan='4'>No record found</td>
                </tr>

            </tbody>
        </table>
    </div>
</section>


